{% extends 'base.html.twig' %}

{% block body %}
    <h1>Filter</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ filter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ filter.name }}</td>
            </tr>
            <tr>
                <th>Isdeleted</th>
                <td>{% if entity.isDeleted %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('filter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('filter_edit', { 'id': filter.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
